# Crypto Crawler Environment Configuration
# Copy this file to .env and adjust values as needed

# HTTP Client Settings
CRYPTO_HTTP_TIMEOUT=30
CRYPTO_HTTP_MAX_RETRIES=5
CRYPTO_REQUESTS_PER_SECOND=2.0

# Polling Settings
CRYPTO_POLL_INTERVAL=1.0
CRYPTO_MAX_FAILURES=5

# Rate Limiting
CRYPTO_HTML_DELAY=0.5
CRYPTO_JSON_DELAY=0.2

# Moving Average Window
CRYPTO_MA_WINDOW=10

# Storage Settings
CRYPTO_STORAGE_TYPE=csv
CRYPTO_DATA_DIR=data

# Logging Settings
CRYPTO_LOG_LEVEL=INFO
CRYPTO_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CoinMarketCap Scraping Settings
CRYPTO_CMC_PAGES=5
CRYPTO_CMC_PER_PAGE=20

# API URLs (configurable for testing or alternative endpoints)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_BASE_URL=https://coinmarketcap.com
COINMARKETCAP_API_URL=https://api.coinmarketcap.com/data-api/v3/cryptocurrency/listing
